@page
@model Organigrama.Pages.VentanaperfilModel
@{
    var colors = Model.GetAreaColors(Model.Empleado.Area);
    string nombre = Model.Empleado.Nombre ?? "Usuario";
    bool tieneCV = !string.IsNullOrWhiteSpace(Model.Empleado.CvUrl);
}

<div class="profile-page-wrapper" style="--area-primary: @colors.Primary; --area-secondary: @colors.Secondary;">
    <div class="container py-5">

        <a href="/Index" class="btn-regresar-custom">
            <i class="fas fa-arrow-left"></i> Regresar al Organigrama
        </a>

        <div class="profile-card-glass shadow-2xl">
            <div class="card-header-gradient">
                <div class="status-badge-container">
                    <span class="status-dot"></span>
                    <span class="status-text">Empleado Activo</span>
                </div>
            </div>

            <div class="card-body-content">
                <div class="row">
                    <div class="col-lg-3 text-center">
                        <div class="avatar-wrapper">
                            @if (!string.IsNullOrEmpty(Model.Empleado.Foto))
                            {
                                <img src="@Model.Empleado.Foto" alt="Perfil">
                            }
                            else
                            {
                                <div class="avatar-placeholder">@(nombre.Substring(0, 1).ToUpper())</div>
                            }
                            <div class="avatar-ring"></div>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="info-container">
                            <span class="area-label">@Model.Empleado.Area</span>
                            <h1 class="display-name">@Model.Empleado.Nombre</h1>
                            <p class="role-text">@Model.Empleado.Puesto</p>

                            <div class="pills-container">
                                <div class="glass-pill"><i class="far fa-envelope"></i> @Model.Empleado.Email</div>
                                <div class="glass-pill"><i class="far fa-id-card"></i> ID: #@Model.Empleado.Id</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="cv-section-modern">
                    <div class="cv-card-inner">
                        <div class="cv-info">
                            <h3>Expediente Digital</h3>
                            <p>Documentación oficial cargada en el sistema.</p>
                        </div>

                        <div class="cv-actions-grid">
                            <form method="post" asp-page-handler="UploadCV" asp-route-id="@Model.Empleado.Id"
                                enctype="multipart/form-data" id="uploadForm">
                                <input type="file" asp-for="ArchivoCV" id="cvInput" hidden accept=".pdf"
                                    onchange="document.getElementById('uploadForm').submit()">
                                <button type="button" class="action-btn upload-btn"
                                    onclick="document.getElementById('cvInput').click()">
                                    <i class="fas fa-upload"></i> @(tieneCV ? "Actualizar CV" : "Subir CV")
                                </button>
                            </form>

                            @if (tieneCV)
                            {
                                <div class="action-divider"></div>

                                <button type="button" class="action-btn view-btn" onclick="mostrarModalCV()">
                                    <i class="fas fa-eye"></i> Vista Previa
                                </button>

                                <a href="/uploads/cvs/@Model.Empleado.CvUrl" target="_blank" class="icon-btn-glass"><i
                                        class="fas fa-external-link-alt"></i></a>

                                <form method="post" asp-page-handler="DeleteCV" asp-route-id="@Model.Empleado.Id"
                                    class="m-0">
                                    <button type="submit" class="icon-btn-delete"
                                        onclick="return confirm('¿Borrar definitivamente el CV?')">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modalVisualizador" class="modal-full-overlay">
    <div class="modal-container-white">
        <div class="modal-header-top">
            <span><i class="fas fa-file-pdf" style="color: #e11d48;"></i> Previsualización</span>
            <button type="button" class="btn-cerrar-modal" onclick="ocultarModalCV()">&times;</button>
        </div>
        <div class="modal-body-pdf">
            @if (tieneCV)
            {
                <iframe src="/uploads/cvs/@Model.Empleado.CvUrl#toolbar=0" id="iframePDF"></iframe>
            }
        </div>
    </div>
</div>

<style>
    :root {
        --area-primary: #5A67D8;
        --area-secondary: #EEF0FA;
    }

    .profile-page-wrapper {
        background: #f1f5f9;
        min-height: 100vh;
        font-family: 'Inter', sans-serif;
    }

    /* STATUS BADGE NUEVO */
    .status-badge-container {
        position: absolute;
        top: 25px;
        right: 40px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(8px);
        padding: 6px 16px;
        border-radius: 50px;
        display: flex;
        align-items: center;
        gap: 8px;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .status-dot {
        width: 8px;
        height: 8px;
        background: #4ade80;
        border-radius: 50%;
        box-shadow: 0 0 10px #4ade80;
        animation: pulse-green 2s infinite;
    }

    .status-text {
        color: white;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    @@keyframes pulse-green {
        0% {
            transform: scale(0.95);
            box-shadow: 0 0 0 0 rgba(74, 222, 128, 0.7);
        }

        70% {
            transform: scale(1);
            box-shadow: 0 0 0 10px rgba(74, 222, 128, 0);
        }

        100% {
            transform: scale(0.95);
            box-shadow: 0 0 0 0 rgba(74, 222, 128, 0);
        }
    }

    /* BOTÓN REGRESAR */
    .btn-regresar-custom {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: white;
        color: var(--area-primary);
        padding: 10px 22px;
        border-radius: 12px;
        font-weight: 700;
        text-decoration: none !important;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        border: 1px solid #e2e8f0;
        margin-bottom: 20px;
        font-size: 0.9rem;
    }

    /* CARD ESTRUCTURA */
    .profile-card-glass {
        background: white;
        border-radius: 40px;
        border: 1px solid #e2e8f0;
        overflow: hidden;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.08);
        position: relative;
    }

    .card-header-gradient {
        background: linear-gradient(135deg, var(--area-primary), var(--area-secondary));
        height: 130px;
        position: relative;
    }

    .card-body-content {
        padding: 0 50px 50px 50px;
    }

    /* AVATAR */
    .avatar-wrapper {
        position: relative;
        width: 180px;
        height: 180px;
        margin: -90px auto 25px;
    }

    .avatar-wrapper img,
    .avatar-placeholder {
        width: 100%;
        height: 100%;
        border-radius: 50px;
        border: 8px solid white;
        object-fit: cover;
        background: #f8fafc;
        position: relative;
        z-index: 5;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
    }

    .avatar-placeholder {
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4.5rem;
        color: var(--area-primary);
        font-weight: 800;
    }

    .avatar-ring {
        position: absolute;
        inset: -10px;
        border: 2.5px dashed var(--area-primary);
        border-radius: 65px;
        animation: spin 25s linear infinite;
        opacity: 0.25;
    }

    /* TEXTOS */
    .display-name {
        font-weight: 900;
        font-size: 3rem;
        color: #1e293b;
        margin: 0;
        letter-spacing: -1px;
    }

    .role-text {
        font-size: 1.3rem;
        color: #64748b;
        margin-top: -5px;
    }

    .area-label {
        color: var(--area-primary);
        font-weight: 800;
        letter-spacing: 2px;
        font-size: 0.85rem;
        text-transform: uppercase;
    }

    /* PILLS INFO */
    .pills-container {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }

    .glass-pill {
        background: #f1f5f9;
        padding: 6px 15px;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
        color: #475569;
        border: 1px solid #e2e8f0;
    }

    /* CV ACCIONES */
    .cv-card-inner {
        background: #f8fafc;
        padding: 25px;
        border-radius: 25px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border: 1px solid #edf2f7;
        margin-top: 40px;
    }

    .cv-actions-grid {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .action-btn {
        padding: 12px 24px;
        border-radius: 14px;
        border: none;
        font-weight: 700;
        cursor: pointer;
        transition: 0.3s;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
    }

    .view-btn {
        background: var(--area-primary);
        color: white;
        box-shadow: 0 10px 15px -3px rgba(90, 103, 216, 0.3);
    }

    .upload-btn {
        background: white;
        border: 2px solid var(--area-primary);
        color: var(--area-primary);
    }

    .icon-btn-glass {
        width: 45px;
        height: 45px;
        background: white;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #64748b;
        border: 1px solid #e2e8f0;
        text-decoration: none;
    }

    .icon-btn-delete {
        width: 45px;
        height: 45px;
        background: #fff1f2;
        color: #e11d48;
        border: 1px solid #fecdd3;
        border-radius: 12px;
        cursor: pointer;
        transition: 0.2s;
    }

    .icon-btn-delete:hover {
        background: #e11d48;
        color: white;
    }

    /* MODAL */
    .modal-full-overlay {
        display: none;
        position: fixed;
        inset: 0;
        z-index: 99999;
        background: rgba(15, 23, 42, 0.466);
        backdrop-filter: blur(10px);
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .modal-container-white {
        background: white;
        width: 100%;
        max-width: 900px;
        border-radius: 30px;
        overflow: hidden;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    .modal-header-top {
        padding: 20px 30px;
        background: #f8fafc;
        border-bottom: 1px solid #eee;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-weight: 800;
        color: #1e293b;
    }

    .btn-cerrar-modal {
        background: #e2e8f0;
        border: none;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        font-size: 1.5rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    #iframePDF {
        width: 100%;
        height: 55vh;
        border: none;
    }

    @@keyframes spin {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }
</style>

<script>
    function mostrarModalCV() {
        document.getElementById('modalVisualizador').style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }

    function ocultarModalCV() {
        document.getElementById('modalVisualizador').style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    window.onclick = function (e) {
        if (e.target == document.getElementById('modalVisualizador')) ocultarModalCV();
    }
</script>