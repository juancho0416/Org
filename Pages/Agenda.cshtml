@page "{id:int}"
@model Organigrama.Pages.AgendaModel
@{
    ViewData["Title"] = "Agenda Diaria";
}

<div class="app-container">
    <main>
        <div class="org-container">
            <header class="page-header">
                <div class="d-flex align-items-center gap-3">
                    <a asp-page="/VentanaPerfil" asp-route-id="@Model.EmpleadoId" class="btn-up-modern">
                        <i class="fas fa-arrow-left"></i> Volver al Perfil
                    </a>
                    <h1 class="m-0">Agenda de @Model.NombreEmpleado</h1>
                </div>
            </header>

            <div class="control-group">
                <form method="post" class="d-flex gap-2 w-100">
                    <div class="search-module" style="flex: 1;">
                        <input type="text" name="NuevaActividad" placeholder="Â¿QuÃ© actividad realizarÃ¡s hoy?"
                            class="area-selector-dropdown" style="width: 100%; border: 2px solid #e2e8f0;" required>
                    </div>
                    <button type="submit" class="btn-search">
                        <i class="fas fa-plus"></i> Registrar
                    </button>
                </form>
            </div>
            <a asp-page-handler="ExportarExcel" asp-route-id="@Model.EmpleadoId" class="btn btn-success">
                ðŸ“¥ Descargar Excel
            </a>
            <div class="area-bubble-wrapper is-open">
                <div class="area-bubble-header d-flex justify-content-between align-items-center">
                    <strong><i class="fas fa-calendar-check me-2"></i>Actividades realizadas</strong>
                    <span class="badge rounded-pill bg-warning text-dark">@Model.ListaActividades.Count registros
                        totales</span>
                </div>

                <div class="area-collapsible-body" style="max-height: none; padding: 25px;">
                    @if (!Model.ListaActividades.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-ghost fa-3x mb-3" style="color: #cbd5e0;"></i>
                            <p class="text-muted">No hay registros en la agenda.</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var grupo in Model.ListaActividades.GroupBy(a => a.Fecha.Date))
                        {
                            <div class="day-group mb-4">
                                @* Encabezado del dÃ­a *@
                                <div class="day-label">
                                    <i class="far fa-clock me-1"></i>
                                    @if (grupo.Key == DateTime.Today)
                                    {
                                        <span>Hoy</span>
                                    }
                                    else if (grupo.Key == DateTime.Today.AddDays(-1))
                                    {

                                        <span>Ayer</span>
                                    }
                                    else
                                    {

                                        @grupo.Key.ToString("dddd, dd 'de' MMMM")
                                    }
                                </div>

                                <div class="timeline-container-modern">
                                    @foreach (var item in grupo)
                                    {
                                        <div class="timeline-item-modern">
                                            <div class="item-hour">@item.Fecha.ToString("HH:mm")</div>
                                            <div class="item-card subordinate-module-modern">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <span class="activity-text">@item.Descripcion</span>

                                                    <form method="post" asp-page-handler="Eliminar">
                                                        <input type="hidden" name="actividadId" value="@item.Id" />
                                                        <input type="hidden" name="empleadoId" value="@Model.EmpleadoId" />
                                                        <button type="submit" class="btn-delete-minimal" title="Eliminar actividad"
                                                            onclick="return confirm('Â¿Seguro que deseas borrar este registro?')">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
</div>
</div>
</div>
</div>
</main>
</div>